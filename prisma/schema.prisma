generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  first_name   String
  last_name    String
  email        String   @unique
  password_hash String
  habits     Habit[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  last_login    DateTime?    
}

model Habit {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  name       String
  description String?
  frequency  String
  habitLogs  Habitlog[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Habitlog {
  id        Int      @id @default(autoincrement())
  habit     Habit    @relation(fields: [habitId], references: [id])
  habitId   Int
  date      DateTime
  completed Boolean
}
